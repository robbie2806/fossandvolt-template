// Production Prisma Schema (PostgreSQL)
// Copy this to schema.prisma for production deployments

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  email         String    @unique
  name          String?
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]

  aiCompanion   AICompanion?
  chatMessages  ChatMessage[]
  dailyCheckIns DailyCheckIn[]
  bondActions   BondAction[]
  settings      UserSettings?
  blipkin       Blipkin?

  // BlipNet Relations
  currencyWallet CurrencyWallet?
  inventoryItems InventoryItem[]
  blipkinRoom    BlipkinRoom?
  miniGameResults MiniGameResult[]
  journalEntries BlipkinJournalEntry[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

// PixieVolt AI Models
model AICompanion {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  vibe      String
  bondLevel Int      @default(1)
  bondXP    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ai_companion")
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      String
  content   String
  createdAt DateTime @default(now())

  @@map("chat_message")
}

model DailyCheckIn {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date       DateTime @default(now())
  mood       Int
  reflection String?
  xpAwarded  Int      @default(10)
  createdAt  DateTime @default(now())

  @@map("daily_check_in")
}

model BondAction {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  actionType String
  content    String?
  xpAwarded  Int      @default(5)
  date       DateTime @default(now())
  createdAt  DateTime @default(now())

  @@map("bond_action")
}

model UserSettings {
  id                   String   @id @default(cuid())
  userId               String   @unique
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  allowMemory          Boolean  @default(true)
  dailyReminderEnabled Boolean  @default(true)
  reminderTime         String   @default("09:00")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@map("user_settings")
}

model Blipkin {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name       String
  level      Int      @default(1)
  xp         Int      @default(0)

  evolutionStage String @default("baby")
  megaForm       String?

  mood          String @default("Happy")
  energy        Int    @default(100)
  hunger        Int    @default(30)
  cleanliness   Int    @default(100)
  bond          Int    @default(50)

  lastEnergyRestore DateTime @default(now())
  energyRestoring   Boolean  @default(false)
  feedCount         Int      @default(0)
  lastFeedReset     DateTime @default(now())

  chatMessagesToday     Int      @default(0)
  lastChatReset         DateTime @default(now())
  sleepUntil            DateTime?

  totalFeeds    Int @default(0)
  totalPlays    Int @default(0)
  totalCleans   Int @default(0)
  totalRests    Int @default(0)
  totalChats    Int @default(0)
  daysAlive     Int @default(0)

  currentAnimation String @default("idle")

  theme      String   @default("classic")
  lastSeenAt DateTime @default(now())
  lastStatUpdate DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  presence BlipnetPresence?
  journalEntries BlipkinJournalEntry[]
  miniGameResults MiniGameResult[]

  @@map("blipkin")
}

model BlipnetPresence {
  id         String   @id @default(cuid())
  userId     String   @unique
  blipkinId  String   @unique
  blipkin    Blipkin  @relation(fields: [blipkinId], references: [id], onDelete: Cascade)

  lastLocationX Int @default(5)
  lastLocationY Int @default(5)

  lastDirection String @default("down")
  lastAction    String @default("idle")

  lastSeenAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("blipnet_presence")
}

model CurrencyWallet {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  coins     Int @default(0)
  voltGems  Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("currency_wallet")
}

model ShopItem {
  id          String  @id @default(cuid())
  key         String  @unique
  name        String
  description String
  category    String

  priceCoins    Int
  priceVoltGems Int?

  iconKey      String
  effectType   String
  effectValue  Int    @default(0)

  createdAt DateTime @default(now())

  inventoryItems InventoryItem[]
  roomFurniture RoomFurniture[]

  @@map("shop_item")
}

model InventoryItem {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  shopItemId String
  shopItem   ShopItem @relation(fields: [shopItemId], references: [id])

  quantity   Int @default(1)

  obtainedAt DateTime @default(now())

  @@map("inventory_item")
}

model BlipkinRoom {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name         String   @default("My Room")
  wallpaperKey String   @default("default")
  floorKey     String   @default("wood")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  furniture RoomFurniture[]

  @@map("blipkin_room")
}

model RoomFurniture {
  id         String   @id @default(cuid())
  roomId     String
  room       BlipkinRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  shopItemId String
  shopItem   ShopItem @relation(fields: [shopItemId], references: [id])

  posX       Int
  posY       Int
  rotation   Int @default(0)

  createdAt DateTime @default(now())

  @@map("room_furniture")
}

model MiniGameResult {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  blipkinId  String
  blipkin    Blipkin  @relation(fields: [blipkinId], references: [id], onDelete: Cascade)

  gameType   String
  score      Int
  coinsEarned Int     @default(0)
  xpEarned   Int      @default(0)

  createdAt  DateTime @default(now())

  @@map("mini_game_result")
}

model BlipkinJournalEntry {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  blipkinId  String
  blipkin    Blipkin  @relation(fields: [blipkinId], references: [id], onDelete: Cascade)

  title      String
  body       String
  moodTag    String

  createdAt  DateTime @default(now())

  @@map("blipkin_journal_entry")
}

model GlobalEventState {
  id         String   @id @default(cuid())
  eventKey   String   @unique
  isActive   Boolean  @default(false)

  startsAt   DateTime
  endsAt     DateTime

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("global_event_state")
}
