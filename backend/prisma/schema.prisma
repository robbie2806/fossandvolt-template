// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  email         String    @unique
  name          String?
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]

  aiCompanion   AICompanion?
  chatMessages  ChatMessage[]
  dailyCheckIns DailyCheckIn[]
  bondActions   BondAction[]
  settings      UserSettings?
  blipkin       Blipkin?

  // BlipNet Relations
  currencyWallet CurrencyWallet?
  inventoryItems InventoryItem[]
  blipkinRoom    BlipkinRoom?
  miniGameResults MiniGameResult[]
  journalEntries BlipkinJournalEntry[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

// PixieVolt AI Models
model AICompanion {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  vibe      String // "chill", "productive", "playful", "calm"
  bondLevel Int      @default(1)
  bondXP    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ai_companion")
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      String // "user" or "assistant"
  content   String
  createdAt DateTime @default(now())

  @@map("chat_message")
}

model DailyCheckIn {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date       DateTime @default(now())
  mood       Int // 1-5
  reflection String?
  xpAwarded  Int      @default(10)
  createdAt  DateTime @default(now())

  @@map("daily_check_in")
}

model BondAction {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  actionType String // "check-in", "gratitude", "goal", "chat"
  content    String?
  xpAwarded  Int      @default(5)
  date       DateTime @default(now())
  createdAt  DateTime @default(now())

  @@map("bond_action")
}

model UserSettings {
  id                   String   @id @default(cuid())
  userId               String   @unique
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  allowMemory          Boolean  @default(true)
  dailyReminderEnabled Boolean  @default(true)
  reminderTime         String   @default("09:00")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@map("user_settings")
}

// PixieVolt AI - Blipkin Pet Model
model Blipkin {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name       String
  level      Int      @default(1)
  xp         Int      @default(0)

  // Evolution System
  evolutionStage String @default("baby") // "baby", "child", "teen", "adult", "mega", "elder"
  megaForm       String? // "nurturer", "explorer", "chaos", "calm" (only for mega stage)

  // Stats
  mood          String @default("Happy") // "Happy", "Sleepy", "Lonely", "Excited", "Hungry", "Content", "Joyful", "Sick", "Frustrated", "Playful"
  energy        Int    @default(100)
  hunger        Int    @default(30)
  cleanliness   Int    @default(100) // New stat for evolution
  bond          Int    @default(50)

  // Energy System
  lastEnergyRestore DateTime @default(now()) // When energy was last restored (for 3-hour timer)
  energyRestoring   Boolean  @default(false)  // Is energy currently regenerating?
  feedCount         Int      @default(0)      // Feeds today (resets daily)
  lastFeedReset     DateTime @default(now())  // Last time feed count was reset

  // Care History (for mega form evolution)
  totalFeeds    Int @default(0)
  totalPlays    Int @default(0)
  totalCleans   Int @default(0)
  totalRests    Int @default(0)
  totalChats    Int @default(0)
  daysAlive     Int @default(0)

  // Animation State
  currentAnimation String @default("idle") // "idle", "happy", "hungry", "sleep", "sick", "excited", "evolving"

  theme      String   @default("classic")
  lastSeenAt DateTime @default(now())
  lastStatUpdate DateTime @default(now()) // For stat degradation
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // BlipNet Relations
  presence BlipnetPresence?
  journalEntries BlipkinJournalEntry[]
  miniGameResults MiniGameResult[]

  @@map("blipkin")
}

// BlipNet - Online Presence (Offline-first, ready for real-time sync)
model BlipnetPresence {
  id         String   @id @default(cuid())
  userId     String   @unique
  blipkinId  String   @unique
  blipkin    Blipkin  @relation(fields: [blipkinId], references: [id], onDelete: Cascade)

  // Position in lobby grid
  lastLocationX Int @default(5)
  lastLocationY Int @default(5)

  // Movement & animation
  lastDirection String @default("down") // "up", "down", "left", "right"
  lastAction    String @default("idle") // "idle", "walking", "wave", "bounce", "spin", "emote_heart", etc

  lastSeenAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("blipnet_presence")
}

// Currency Wallet
model CurrencyWallet {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  coins     Int @default(0)
  voltGems  Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("currency_wallet")
}

// Shop Items Catalog
model ShopItem {
  id          String  @id @default(cuid())
  key         String  @unique // Unique identifier like "apple", "toy_ball", etc
  name        String
  description String
  category    String  // "FOOD", "TOY", "DECOR", "ACCESSORY", "ROOM_ITEM", "BOOST"

  priceCoins    Int
  priceVoltGems Int? // Optional premium currency

  iconKey      String // Frontend uses this to pick sprite/emoji
  effectType   String // "FEED", "MOOD_BOOST", "XP_BOOST", "ROOM_DECOR", "COSMETIC"
  effectValue  Int    @default(0)

  createdAt DateTime @default(now())

  // Relations
  inventoryItems InventoryItem[]
  roomFurniture RoomFurniture[]

  @@map("shop_item")
}

// User Inventory
model InventoryItem {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  shopItemId String
  shopItem   ShopItem @relation(fields: [shopItemId], references: [id])

  quantity   Int @default(1)

  obtainedAt DateTime @default(now())

  @@map("inventory_item")
}

// Personal Room
model BlipkinRoom {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name         String   @default("My Room")
  wallpaperKey String   @default("default")
  floorKey     String   @default("wood")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  furniture RoomFurniture[]

  @@map("blipkin_room")
}

// Room Furniture Placement
model RoomFurniture {
  id         String   @id @default(cuid())
  roomId     String
  room       BlipkinRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  shopItemId String
  shopItem   ShopItem @relation(fields: [shopItemId], references: [id])

  posX       Int
  posY       Int
  rotation   Int @default(0) // 0, 90, 180, 270

  createdAt DateTime @default(now())

  @@map("room_furniture")
}

// Mini-Game Results
model MiniGameResult {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  blipkinId  String
  blipkin    Blipkin  @relation(fields: [blipkinId], references: [id], onDelete: Cascade)

  gameType   String   // "FRUIT_CATCH", "BUBBLE_POP", "FISHING", "MEMORY", "DASH"
  score      Int
  coinsEarned Int     @default(0)
  xpEarned   Int      @default(0)

  createdAt  DateTime @default(now())

  @@map("mini_game_result")
}

// Blipkin Journal Entries
model BlipkinJournalEntry {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  blipkinId  String
  blipkin    Blipkin  @relation(fields: [blipkinId], references: [id], onDelete: Cascade)

  title      String
  body       String
  moodTag    String   // "HAPPY", "SAD", "TIRED", "EXCITED", "CALM", "CHAOTIC"

  createdAt  DateTime @default(now())

  @@map("blipkin_journal_entry")
}

// Global Events
model GlobalEventState {
  id         String   @id @default(cuid())
  eventKey   String   @unique // "FEEDING_FRENZY", "HAPPINESS_WEEK", etc
  isActive   Boolean  @default(false)

  startsAt   DateTime
  endsAt     DateTime

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("global_event_state")
}
